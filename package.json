{
  "name": "style-copilot",
  "publisher": "nicolas-roehm",
  "displayName": "Style Code Assistant",
  "description": "Enhance your coding with Style Copilot, ensuring consistent style adherence and code clarity directly in VSCode.",
  "repository": {
    "type": "git",
    "url": "https://github.com/NicolasRoehm/style-copilot"
  },
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [],
  "contributes": {
    "configuration": {
      "title": "style-copilot",
      "type": "object",
      "properties": {
        "style-copilot.ai.customActions": {
          "description": "Define custom actions",
          "scope": "window",
          "type": "array",
          "items": {
            "type": "object",
            "title": "A custom action for Copilot",
            "properties": {
              "label": {
                "type": "string",
                "description": "Label for the action"
              },
              "id": {
                "type": "string",
                "description": "Unique identifier for the action"
              },
              "prompt": {
                "type": "string",
                "description": "Prompt"
              },
              "loadingLabel": {
                "type": "string",
                "description": "Label to show while the action is loading",
                "required": false
              }
            }
          }
        },
        "style-copilot.ai.customCommands": {
          "description": "Define custom commands",
          "scope": "window",
          "type": "array",
          "items": {
            "type": "object",
            "title": "A custom command for Copilot",
            "properties": {
              "description": {
                "type": "string",
                "description": "Description of what the command does"
              },
              "id": {
                "type": "string",
                "description": "Unique identifier for the command"
              },
              "prompt": {
                "type": "string",
                "description": "Prompt"
              }
            }
          }
        }
      }
    },
    "chatParticipants": [
      {
        "id": "style-copilot.ai",
        "fullName": "StyleCopilot",
        "name": "StyleCopilot",
        "description": "Style Copilot helps you execute custom commands and actions in the VSCode editor.",
        "isSticky": true,
        "commands": [],
        "disambiguation": []
      }
    ],
    "commands": [
      {
        "command": "ai.styleInEditor",
        "title": "Execute custom Style Copilot command in the editor"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "@vscode/prompt-tsx": "^0.2.8-alpha",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.9",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.14.0",
    "@typescript-eslint/parser": "^7.14.0",
    "eslint": "^8.26.0",
    "typescript": "^5.5.2"
  }
}
